{
    "manifest_version": 3,
    "name": "Obsidian Daily Bookmarks for Chrome",
    "version": "1.0",
    "description": "Plugin allows you to display a panel of favorite links and edit them. It also supports daily notes with calendar. Your data is stored only locally and only in your Obsidian",
    "icons": {
        "16": "favorites-icon.png",
        "48": "favorites-icon.png",
        "128": "favorites-icon.png"
    },
    "side_panel": {
        "default_path": "sidebar.html"
    },
    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
        "sidePanel",
        "storage",
        "webRequest",
        "tabs",
        "contextMenus",
        "notifications",
        "windows",
        "commands"
    ],
    "host_permissions": [
        "https://imater74.keenetic.link/*",
        "file://*/*"
    ],
    "commands": {
        "toggle-hotkeys": {
            "suggested_key": {
                "default": "Ctrl+Shift+X"
            },
            "description": "Toggle hotkeys in side panel"
        }
    }
}